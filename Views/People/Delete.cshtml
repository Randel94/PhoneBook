@model PhoneBook.Models.Person

@{
    ViewData["Title"] = "Delete";
}
<a asp-controller="People" asp-action="Details" asp-route-id="@Model.Id">Назад</a>
<div>
    <h2>
        @Html.DisplayFor(model => model.Name)
        @Html.DisplayFor(model => model.SName)
    </h2>
    <dl class="row">
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.BDate)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.BDate)
        </dd>
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.PhoneNumbers)
        </dt>
        @foreach (var item in Model.PhoneNumbers)
        {
            <dd class="col-sm-2">
                @Html.DisplayFor(modelItem => item.Number)
            </dd>
            <dd class="col-sm-10">
                <a asp-controller="PhoneNumbers" asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-controller="PhoneNumbers" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </dd>

        }
    </dl>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
    <h4>Вы уверены что хотите удалить этот контакт?</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
