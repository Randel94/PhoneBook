@model PhoneBook.Models.PhoneNumber
@{
    ViewBag.Title = "Добавление номера";
}
<a asp-controller="People" asp-action="Details" asp-route-id="@Model.PersonId">Назад</a>
<h2>Номер телефона</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="PhoneNumbers" asp-route-id="@Model.PersonId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PersonId" class="form-control" />
                <input type="text" asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
